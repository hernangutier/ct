<odoo>
    <data>
        <template id="ct_list_price_card_container_pdf">
            <t t-call="web.html_container">
               <t t-call="web.basic_layout">
               <xpath expr="//div/[@class='header']" position="replace">
               <div class="header">
                   <img t-att-src="image_data_uri(company.img_list_price_header)"
                     class="card-img mx-auto d-block"
                     style="max-height: 25mm; max-width: 210mm; padding: 0px;" alt="header"/>
               </div>
               </xpath>

               <!-- <img t-att-src="image_data_uri(company.img_list_background)"
                    class="card-img mx-auto d-block center"
                    style="display: block; position: absolute; margin-left: auto; margin-right: auto; width: 50%; opacity: 0.2; max-height: 150mm; max-width: 150mm; padding: 0px;" alt="header"/>
                -->

               <t t-foreach="dataset_categ" t-as="categories">
                   <h3 style= "font-weight: 900; padding-top: 3px; text-align:center" class="p-3 mb-2 bg-dark text-white rounded-pill" t-esc="categories['name']"></h3>
                   <div class="page">

                   <t t-foreach="docs" t-as="product">
                      <t t-if="product['categ_id']==categories['id']">
                        <t t-call="ct_list_price.report_product_card">
                            <t t-set="product" t-value="product"/>
                        </t>
                      </t>
                    </t>

               </div>
                   <p style="page-break-before:always;"> </p>
              </t>
                   <div class="footer">
                   <img t-att-src="image_data_uri(company.img_list_price_footer)"
                     class="card-img mx-auto d-block"
                     style="max-height: 25mm; max-width: 210mm; padding: 0px;" alt="header"/>
               </div>
              </t>
              </t>
        </template>
    </data>
</odoo>

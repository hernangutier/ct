<odoo>
    <data>
        <!-- Vista Company Modificada para Agregar Header y Footer -->
        <record id="ct_list_price_company_form" model="ir.ui.view">
            <field name="name">ct.list.price.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"></field>
            <field name="arch" type="xml">
                <field name="favicon" position="after">
                    <field name="img_card_product" widget="image" class="float-left oe_avatar" groups="base.group_no_one"/>
                    <field name="img_list_price_header" widget="image" class="float-left oe_avatar" groups="base.group_no_one"/>
                    <field name="img_list_price_footer" widget="image" class="float-left oe_avatar" groups="base.group_no_one"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
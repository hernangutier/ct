<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Form para Container de Category -->
        <record id="ct_list_price_container_category_form" model="ir.ui.view">
            <field name="name">ct.list.price.container.category.form</field>
            <field name="model">ct.list.price.container.category</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="categ_childs_ids" widget="many2many_tags" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Vista Tree para Container de Category -->
        <record id="ct_list_price_container_category_tree" model="ir.ui.view">
            <field name="name">ct.list.price.container.category.tree</field>
            <field name="model">ct.list.price.container.category</field>
            <field name="arch" type="xml">
                <tree>

                        <field name="name" />
                        <field name="categ_childs_ids" widget="many2many_tags" />

                </tree>
            </field>
        </record>
    
    </data>
</odoo>